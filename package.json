{
  "name": "lookaway-windows",
  "version": "1.0.0",
  "description": "Context-aware break reminders for Windows - implementing the 20-20-20 rule",
  "main": "dist/main/index.js",
  "homepage": "./",
  "scripts": {
    "setup": "node scripts/setup.js",
    "icons": "node scripts/create-placeholder-icons.js",
    "fix": "bash scripts/fix-and-run.sh",
    "fix:win": "scripts\\fix-and-run.bat",
    "dev": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:watch": "npm run build:main && tsc -p tsconfig.main.json --watch",
    "electron:dev": "wait-on dist/main/index.js && electron --no-sandbox .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:win:nsis": "npm run build && electron-builder --win nsis",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "eye-care",
    "break-reminder",
    "productivity",
    "windows",
    "20-20-20-rule"
  ],
  "author": "LookAway Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vitejs/plugin-react": "^4.1.1",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "active-win": "^8.1.1",
    "auto-launch": "^5.0.5",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "is-elevated": "^3.0.0",
    "open": "^10.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semver": "^7.5.4",
    "systeminformation": "^5.21.7",
    "tailwindcss": "^3.3.5"
  },
  "build": {
    "appId": "com.lookaway.windows",
    "productName": "LookAway for Windows",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LookAway for Windows"
    },
    "publish": {
      "provider": "github",
      "private": true
    }
  }
} 